# CNM Agent Configuration
# Copy this file to .env and configure for your machine

# Hub connection - URL of the CNM hub server
CNM_HUB_URL=wss://192.168.1.204:3001/agent

# Agent authentication token - must match hub's AGENT_TOKEN
CNM_AGENT_TOKEN=your-shared-agent-token-here

# Machine identity - unique name for this machine
CNM_MACHINE_ID=MAGNETON

# Agent server port (for direct P2P connections)
CNM_AGENT_PORT=3002

# Projects directory - where your code projects are stored
CNM_PROJECTS_PATH=D:\Projects with Claude

# Claude Code executable path (optional - defaults to 'claude')
# CLAUDE_PATH=C:\Users\YourUser\.local\bin\claude.exe

# SSL certificate verification (set to 'true' for production)
# CNM_REJECT_UNAUTHORIZED=false
